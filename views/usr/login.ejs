<% include ../layout/header%>
<div class="container">
  <div class="login">
    <h3 class="text_center">User Login</h3>
    <hr>
    <form action="/usr/login" class="form-horizontal" method="post">
      <div class="form-group">
        <label class="control-label col-sm-2" for="username">User ID:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="username" placeholder="Enter Username" autocomplete="off">
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Password:</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" name="password" placeholder="Enter password">
          </div>
      </div>

      <div class="form-group text_center">
          <button type="submit" class="btn btn-default">Login</button>
      </div>
      <%if(message){%>
        <p><%= message%></p>
      <%}%>
    </form>
  </div>
</div>
<% include ../layout/footer%>
